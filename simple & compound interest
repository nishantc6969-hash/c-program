#include <stdio.h>
#include <math.h>
int main()
{
    int p,r,t , x , y;
    printf("enter principal amount:");
    scanf("%d",&p);
    printf("enter rate of interest:");
    scanf("%d",&r);
    printf("enter time:");
    scanf("%d",&t);
    printf("simple interest:%d\n", (p*r*t)/100 );
    printf("tortal amt. payable:%d\n", ((p*r*t)/100)+p));

    printf("compound interest:%f\n",p*(pow(1+(r/100),t)));
    
    return 0;

}
