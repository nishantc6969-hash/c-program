#include <stdio.h>
int main()
{
    float a , b;
    char n ;
    printf("enter 1st number:");
    scanf("%f",&a);
    printf("enter 2nd number:");
    scanf("%f",&b);
    printf("what u want(+,-,*,/):");
    scanf(" %c",&n);
    if (n=='+'){
        printf("sum is:%f\n", a+b);
    }
    else if(n=='-'){
        printf("subtraction is: %f\n", a-b);
    }
    else if(n=='*'){
        printf("multiplication is:%f\n", a*b);
    }
    else if ( n =='/'){
        if (b==0){
            printf("invalid: division by zero is not allowed\n");
        }
        else{
            printf("divison is: %f\n", a/b);

        }
        
    }
    
    return 0;


}
